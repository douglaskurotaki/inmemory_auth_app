<!-- app/views/users/new.html.erb -->
<h1 class="text-center">Cadastro</h1>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @user, local: true, data: { controller: "validation" }, class: "card p-4 shadow" do |form| %>
        <% if @user.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading">Erros encontrados:</h4>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group mb-4">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control #{'is-invalid' if @user.errors[:name].any?}", required: true, data: { action: "input->validation#validateName" } %>
          <div class="invalid-feedback" data-validation-target="nameError"><%= @user.errors[:name].first %></div>
        </div>

        <div class="form-group mb-4">
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, class: "form-control #{'is-invalid' if @user.errors[:email].any?}", required: true, data: { action: "input->validation#validateEmail" } %>
          <div class="invalid-feedback" data-validation-target="emailError"><%= @user.errors[:email].first %></div>
        </div>

        <div class="form-group mb-4">
          <%= form.label :password, class: "form-label" %>
          <%= form.password_field :password, class: "form-control #{'is-invalid' if @user.errors[:password].any?}", required: true, data: { action: "input->validation#validatePassword" } %>
          <div class="invalid-feedback" data-validation-target="passwordError"><%= @user.errors[:password].first %></div>
        </div>

        <div class="form-group mb-4">
          <%= form.label :password_confirmation, class: "form-label" %>
          <%= form.password_field :password_confirmation, class: "form-control #{'is-invalid' if @user.errors[:password_confirmation].any?}", required: true, data: { action: "input->validation#validatePasswordConfirmation" } %>
          <div class="invalid-feedback" data-validation-target="passwordConfirmationError"><%= @user.errors[:password_confirmation].first %></div>
        </div>

        <div class="form-group mt-3">
          <%= form.submit "Cadastrar", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to 'Login', login_path, class: "btn btn-link" %>
      </div>
    </div>
  </div>
</div>