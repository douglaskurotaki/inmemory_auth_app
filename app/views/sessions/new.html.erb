<!-- app/views/sessions/new.html.erb -->
<h1 class="text-center">Login</h1>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: login_path, local: true, data: { turbo: false }, class: "card p-4 shadow" do |form| %>
        <div class="form-group mb-4">
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, class: "form-control", autofocus: true, required: true, value: params.dig(:session, :email) %>
        </div>

        <div class="form-group mb-4">
          <%= form.label :password, class: "form-label" %>
          <%= form.password_field :password, class: "form-control", required: true %>
        </div>

        <div class="form-group mt-3">
          <%= form.submit "Login", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <div class="text-center mt-3">
        <%= link_to 'Sign up', new_user_path, class: "btn btn-link" %>
      </div>
    </div>
  </div>
</div>
